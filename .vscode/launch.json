{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROS: Launch Guidance Planner Example",
            "request": "launch",
            "target": "/workspace/src/mpc_planner/mpc_planner_jackalsimulator/launch/ros1_jackalsimulator.launch",
            "launch": [
                "rviz",
                "gz",
                "gzclient",
                "gzserver"
            ],
            "type": "ros"
        },
        {
            "name": "Attach to debugpy",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            // "preLaunchTask": "ROS Navigation: Generate Solver [Debug]",
        },
        {
            "name": "ROS C++ Node Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devel/lib/패키지이름/노드이름",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ROS_PACKAGE_PATH",
                    "value": "${workspaceFolder}/src:${ROS_PACKAGE_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach to Running ROS Node",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        }
    ]
}